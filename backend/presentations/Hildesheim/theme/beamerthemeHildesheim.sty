\newcommand{\makeopening}{%
  {
  \ifbeamer@inversetitle
    \setbeamercolor{titlelike}{fg=white}
    \setbeamercolor{authorlike}{fg=white}
    \setbeamercolor{background canvas}{bg=structure}
  \fi
  \ifbeamer@cleantitle
    \frame[plain]{\titlepage}
  \else
    \maketitle
  \fi
  }
}

\newcommand{\makeclosing}{%
  {
  \ifbeamer@inversetitle
    \setbeamercolor{titlelike}{fg=white}
    \setbeamercolor{authorlike}{fg=white}
    \setbeamercolor{background canvas}{bg=structure}
  \fi
  \ifbeamer@cleantitle
    \frame[plain]{\titlepage}
  \else
    \maketitle
  \fi
  \newoutputstream{beamerhildesheim}
  \openoutputfile{\jobname.jmt}{beamerhildesheim}
  \addtostream{beamerhildesheim}{\protect\def\protect\beamer@numberofslides{\theframenumber}}
  \closeoutputstream{beamerhildesheim}
  }
}

